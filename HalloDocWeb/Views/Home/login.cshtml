@model Aspnetuser
@{
    ViewData["title"]="Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["title"]-HalloDoc</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <button class="btno"><img src="/images/moon.svg" alt=""></button>
    <img src="/images/Screenshot (2).png" alt="" class="logo">
    <div class="container login-container">
        <img src="/images/SRS Screen Shorts/7768657_3763028.jpg" alt="" class="hero-image">

    </div>
    
    <div class="container login-card">
        <form asp-action="Login" enctype="multipart/form-data">
        <a asp-controller="Home" asp-action="request_screen" class="back-link">
            <img src="/images/chevron-compact-left.svg" alt="">Back
        </a>
        <div class="h3 login-head">Login to your account</div>
        <input type="hidden" asp-for="AspNetUserId" >
        <div class="form-floating username">
                <input type="text" class="form-control" id="floatingUsername" placeholder="Username" asp-for="Username"> <span asp-validation-for="Username" class="text-danger"></span>
            <img src="/images/person-circle.svg" alt="" class="user-icon"><label for="floatingUsername" asp-for="Username">Username</label>
        </div>
        <div class="form-floating username">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="Passwordhash">
                <span asp-validation-for="Passwordhash" class="text-danger"></span>                <label for="floatingPassword" asp-for="Passwordhash">Password</label>
        </div>
            <input type="hidden" asp-for="Email">
            <input type="hidden" asp-for="Phonenumber">
            <input type="hidden" asp-for="Createddate">
            <input type="hidden" asp-for="Ip">
        <input type="submit" value="login"  class="login-button">
       
        <a  class="forgot-link" asp-controller="Home" asp-action="Forgot">Forgot Password</a>
        </form>
    </div>
    
    <ul class="nav footer-nav">
        <li class="nav-item">
            <a class="nav-link footer-link" href="#">Terms of conditions</a>
        </li>

        <li class="nav-item">

            <a class="nav-link footer-link" href="#">Privacy Policy</a>
        </li>
    </ul>
    <div class="divider">|</div>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}