    <script>
       
        $('#save_admin').on('click', function (e) {
            console.log("hello");
            var reqid = $('#req_id').val();
            var reqdata = $('#floatingTextarea').val();
            console.log(reqid);
            console.log(reqdata);
            var viewModel = { req_id : reqid, req_data : reqdata };
            console.log(viewModel);
            $.ajax({
                url: '/Case/ViewNotes',
                type: 'POST',
                data: viewModel,
                dataType:'json',
                success: function (response) {
                    $('#nav-home').html(response);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
            $('.AdminNotes').html(reqdata);
        });
    </script>

</body>
