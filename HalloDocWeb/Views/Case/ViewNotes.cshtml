            <div class="card">
                <div class="card-body">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="@Model.Admin" id="floatingTextarea" style="height:250px"></textarea>
                        <label for="floatingTextarea">Admin Notes</label>
                    </div>
                    <input type="hidden" value="@Model.req_id" id="req_id"/>
                    <button class="btn btn-info mt-2 float-end" id="save_admin">Save Changes</button>
                </div>
            </div>
        </div>
       
    </div>

    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
