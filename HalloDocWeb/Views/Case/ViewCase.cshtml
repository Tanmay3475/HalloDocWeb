        <h2 class="mt-2 float-start ">New Request <span class="cs-head">Patient</span></h2>
        <button class="btn btn-outline-primary float-end mt-2 me-5 back-button" >
            < Back
        </button>


    </div>
    <div class="container themed-container ms-0 bg-white" style="left:300px;position:absolute;top:300px;">
        <p class="h3 p-2">Patient Information</p>
        <fieldset disabled>
            <!-- <div class="row mb-3">
                <div class="col-6 themed-grid-col"><div class="mb-3">
                    <label for="disabledTextInput" class="form-label">First Name</label>
                    <input type="text" id="disabledTextInput" class="form-control" placeholder="Test">
                  </div></div>

                <div class="col-6 themed-grid-col"><div class="col-6 themed-grid-col"><div class="mb-3">
                    <label for="disabledTextInput" class="form-label">First Name</label>
                    <input type="text" id="disabledTextInput" class="form-control" placeholder="Test">
                  </div></div></div>
              </div> -->
              <div class="row">
                  <div class="col">Confirmation Number</div>

              </div>
            <div class="row">
                <div class="col" style="color:aqua">MDEEGFSGSFDGG</div>

            </div>
         
            <div class="col-12 form-floating pc-text">
                <textarea class="form-control" id="symptoms" name="text" placeholder="Stomach Pain">@Model.Symptoms</textarea>
               <label for="symptoms" >Patient Notes</label>
            </div>
            <hr />
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">First Name</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.FirstName">
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Last Name</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.LastName">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Date Of Birth</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.DateOfBirth">
                    </div>
                </div>
                <div class="col">
                    <label for="disabledTextInput" class="form-label mt-3"></label><select class="form-select" aria-label="Disabled select example" disabled>
                        <option selected>@Model.PhoneNumber</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>   <div class="row">
             
                <div class="col">
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Email</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Email">
                    </div>
                </div>
                <div class="col"><button type="button" class="btn btn-outline-primary float-start mt-3">Edit</button></div>
            </div>
          
            <p class="h3 p-2">Location Information</p>
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Region</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Region">
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Business Name/ Address</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Address">
                       
                    </div>
                  
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Room #</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Room">
                    </div>
                </div>
                <div class="col">
                    

                </div>
            </div>
        </fieldset> <button type="button" class="btn btn-danger float-end mb-2 back-button">Cancel</button>
        
        <button type="button" class="btn btn-info float-end me-1 mb-2 viewNotes" value="@Model.id">View Notes</button>
        <button type="button" class="btn btn-info float-end me-1 mb-2" data-bs-toggle="modal" data-bs-target="#exampleModal1">Assign</button>
        <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header" style="background-color:#01BCE9;color:#9EF2F6">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Assign Request</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" style="border:none">
                        <div class="h6 mb-2" style="color:#9D9D9D"> To assign this request,search and select another Physician.</div>
                        <select class="form-select mt-4" aria-label="Default select example" style="color:#8F8F8F" id="regions">
                            <option selected hidden>Narrow search by region</option>
                            @foreach (var item1 in Model.regions)
                            {
                                <option id="@item1.Regionid">@item1.Name</option>
                            }

                        </select>
                        <select class="form-select mt-4 mb-4" aria-label="Default select example" style="color:#8F8F8F" id="physician">
                            <option selected hidden>Select Physicians</option>
                            <div class="hello"></div>
                        </select>
                        <div class="form-floating mt-4">
                            <textarea class="form-control" placeholder="Leave a comment here" id="float" style="height:100px;"></textarea>
                            <label for="floating" style="color:#8F8F8F">Description</label>
                        </div>
                    </div>
                    <div class="modal-footer" style="border:none">

                        <button type="button" class="btn btn-outline-info" id="assign_case" value="@Model.id" data-bs-dismiss="modal">Submit</button>
                        <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
