@model DashboardViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <a class="btn btn-outline-primary pc-button" asp-action="Dashboard" asp-route-id="@Model.User.Userid"><  Back</a>
    <div class="container cv-container">
        <form asp-action="submit_else" enctype="multipart/form-data">
        <div class="row"><div class="col-12 pc-head">Patient Information</div></div>
        <div class="row">
            <div class="col-12 form-floating pc-text">
                <textarea class="form-control" id="symptoms" name="text" placeholder="Comment goes here" asp-for="Symptoms"></textarea>
                <label for="symptoms" asp-for="Symptoms">Enter brief details Of Symptoms(Optional)</label>
            </div>
        </div>
        <div class="row">
            <div class="col-6 form-floating pc-text">
                <input type="text" class="form-control" id="floatingFirstname" placeholder="Password" asp-for="FirstName">
                <label for="floatingFirstname" asp-for="FirstName">First Name</label>
            </div>
            <div class="col-6 form-floating pc-text">
                <input type="text" class="form-control" id="floatinglastname" placeholder="Password" asp-for="LastName">
                <label for="floatinglastname" asp-for="LastName">Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="col-6 form-floating pc-text">
                <input type="date" class="form-control" id="floatingdate" placeholder="Password" asp-for="DateOfBirth">
                <label for="floatingdate" asp-for="DateOfBirth">Date of Birth</label>
            </div>
        </div>
        <div class="row"><div class="col-12 pc-head">Patient Contact Information</div></div>
        <div class="row">
            <div class="col-6 form-floating pc-text">
                <input type="email" class="form-control" id="floatingemail" placeholder="Password" asp-for="Email">
                <label for="floatingemail" asp-for="Email">Email</label>
            </div>
            <div class="col-6 input-group pc-num">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"><img src="/images/flag-fill.svg" alt=""></button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
                <input type="number" class="form-control" aria-label="Text input with dropdown button" placeholder="(201) 555-0123" asp-for="Email">
            </div>
        </div>
        <div class="row"><div class="col-12 pc-head">Patient Location</div></div>
        <div class="row">
            <div class="col-6 form-floating pc-text">
                <input type="text" class="form-control" id="street" placeholder="Password" asp-for="Street">
                <label for="street" asp-for="Street">Street</label>
            </div>
            <div class="col-6 form-floating pc-text">
                <input type="text" class="form-control" id="floatingcity" placeholder="Password" asp-for="City">
                <label for="floatingcity" asp-for="City">City</label>
            </div>
        </div>
        <div class="row">
            <div class="col-6 form-floating pc-text">
                <input type="text" class="form-control" id="country" placeholder="Password" asp-for="State">
                <label for="country" asp-for="State">Country</label>
            </div>
            <div class="col-6 form-floating pc-text">
                <input type="number" class="form-control" id="floatingzip" placeholder="Password" asp-for="ZipCode">
                <label for="floatingzip" asp-for="ZipCode">Zip Code</label>
            </div>
        </div>
        <div class="row">
            <div class="col-6 form-floating pc-text">
                <input type="text" class="form-control" id="floatingroom" placeholder="Password" asp-for="Room">
                <label for="floatingroom">Room# / Suite(Optional)</label>
            </div>
                <div class="col-2"><a href="https://www.google.co.in/maps" class="btn btn-outline-primary mt-3"><img src="/images/geo-alt.svg" alt="">Map</a></div>
        </div>
        <div class="row"><div class="col-12 pc-head">Relation</div></div>
        <div class="row">
            <div class="col-6 form-floating pc-text">
                <input type="text" class="form-control" id="country" placeholder="Password" asp-for="Relationname">
                <label for="country" asp-for="Relationname">Relation With Patient(Optional)</label>
            </div>
        </div>
        <div class="row"><div class="col-12 pc-head">(Optional) Upload photo or Document</div></div>
        <div class="row">
            <div class="col-12 input-group pc-text">
                <input type="file" class="form-control" id="inputGroupFile02" asp-for="Filepath">
                <label class="input-group-text" for="inputGroupFile02" asp-for="Filepath"><img src="/images/cloud-arrow-up.svg" alt="" class="u-icon">Upload</label>
            </div>
        </div>
        <div class="row"><div class="col-8"></div><div class="col-2 pc-text"><button type="submit" class="btn btn-outline-primary">Submit</button></div><div class="col-2 pc-text"><a asp-action="Dashboard" asp-route-id="@Model.User.Userid" type="button" class="btn btn-outline-primary">Cancel</a></div></div>
        </form>
    </div>

    <!-- <div class="select">Select Here</div> -->
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>